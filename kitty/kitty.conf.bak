include ./kitty-themes/themes/tokyonight-night.conf

# term xterm-kitty
#
env EDITOR=nvim

##################################################
#                                                #
#  ███████╗ ██████╗ ███╗   ██╗████████╗███████╗  #
#  ██╔════╝██╔═══██╗████╗  ██║╚══██╔══╝██╔════╝  #
#  █████╗  ██║   ██║██╔██╗ ██║   ██║   ███████╗  #
#  ██╔══╝  ██║   ██║██║╚██╗██║   ██║   ╚════██║  #
#  ██║     ╚██████╔╝██║ ╚████║   ██║   ███████║  #
#  ╚═╝      ╚═════╝ ╚═╝  ╚═══╝   ╚═╝   ╚══════╝  #
#                                                #
##################################################
# font_family       JetBrainsMono Nerd Font
font_family       Iosevka Nerd Font
italic_font       auto
bold_font         auto
bold_italic_font  auto
font_size         15.0

modify_font cell_height 22px
modify_font cell_width 100%
modify_font underline_position 3
modify_font underline_thickness 150%
# modify_font baseline 0
# modify_font strikethrough_position 3px

########################################################
#                                                      #
#   ██████╗██╗   ██╗██████╗ ███████╗ ██████╗ ██████╗   #
#  ██╔════╝██║   ██║██╔══██╗██╔════╝██╔═══██╗██╔══██╗  #
#  ██║     ██║   ██║██████╔╝███████╗██║   ██║██████╔╝  #
#  ██║     ██║   ██║██╔══██╗╚════██║██║   ██║██╔══██╗  #
#  ╚██████╗╚██████╔╝██║  ██║███████║╚██████╔╝██║  ██║  #
#   ╚═════╝ ╚═════╝ ╚═╝  ╚═╝╚══════╝ ╚═════╝ ╚═╝  ╚═╝  #
#                                                      #
########################################################
enable_cursor_trail yes
cursor_trail 3
# cursor_blink_interval -1  # Set to zero to disable blinking. Negative values mean use system default
# cursor_stop_blinking_after 0 # Set to zero to never stop blinking.

#######################################
#                                     #
#  ████████╗ █████╗ ██████╗ ███████╗  #
#  ╚══██╔══╝██╔══██╗██╔══██╗██╔════╝  #
#     ██║   ███████║██████╔╝███████╗  #
#     ██║   ██╔══██║██╔══██╗╚════██║  #
#     ██║   ██║  ██║██████╔╝███████║  #
#     ╚═╝   ╚═╝  ╚═╝╚═════╝ ╚══════╝  #
#                                     #
#######################################
tab_bar_edge top
# fade \ slant \ separator \ powerline \ hidden
# angled, slanted, round
# tab_powerline_style round
tab_bar_style hidden
tab_bar_align center
tab_title_template none
# tab_title_template "{fmt.fg.tab}{index}: {title}"

################################################################
#                                                              #
#  ██╗    ██╗██╗███╗   ██╗██████╗  ██████╗ ██╗    ██╗███████╗  #
#  ██║    ██║██║████╗  ██║██╔══██╗██╔═══██╗██║    ██║██╔════╝  #
#  ██║ █╗ ██║██║██╔██╗ ██║██║  ██║██║   ██║██║ █╗ ██║███████╗  #
#  ██║███╗██║██║██║╚██╗██║██║  ██║██║   ██║██║███╗██║╚════██║  #
#  ╚███╔███╔╝██║██║ ╚████║██████╔╝╚██████╔╝╚███╔███╔╝███████║  #
#   ╚══╝╚══╝ ╚═╝╚═╝  ╚═══╝╚═════╝  ╚═════╝  ╚══╝╚══╝ ╚══════╝  #
#                                                              #
################################################################
confirm_os_window_close 0
enabled_layouts splits

hide_window_decorations yes

map ctrl+a>% launch --cwd=current --location=vsplit
map ctrl+a>" launch --cwd=current --location=hsplit

map ctrl+a>j neighboring_window down
map ctrl+a>k neighboring_window up
map ctrl+a>l neighboring_window right
map ctrl+a>h neighboring_window left

##############################################################################################
#
# ██████╗ ██████╗ ██╗      ██████╗ ██████╗ ███████╗ ██████╗██╗  ██╗███████╗███╗   ███╗███████╗
#██╔════╝██╔═══██╗██║     ██╔═══██╗██╔══██╗██╔════╝██╔════╝██║  ██║██╔════╝████╗ ████║██╔════╝
#██║     ██║   ██║██║     ██║   ██║██████╔╝███████╗██║     ███████║█████╗  ██╔████╔██║█████╗
#██║     ██║   ██║██║     ██║   ██║██╔══██╗╚════██║██║     ██╔══██║██╔══╝  ██║╚██╔╝██║██╔══╝
#╚██████╗╚██████╔╝███████╗╚██████╔╝██║  ██║███████║╚██████╗██║  ██║███████╗██║ ╚═╝ ██║███████╗
# ╚═════╝ ╚═════╝ ╚══════╝ ╚═════╝ ╚═╝  ╚═╝╚══════╝ ╚═════╝╚═╝  ╚═╝╚══════╝╚═╝     ╚═╝╚══════╝
#
##############################################################################################
background_opacity 0.72
background_blur 35

####################################
#                                  #
#  ███╗   ███╗██╗███████╗ ██████╗  #
#  ████╗ ████║██║██╔════╝██╔════╝  #
#  ██╔████╔██║██║███████╗██║       #
#  ██║╚██╔╝██║██║╚════██║██║       #
#  ██║ ╚═╝ ██║██║███████║╚██████╗  #
#  ╚═╝     ╚═╝╚═╝╚══════╝ ╚═════╝  #
#                                  #
####################################
enable_audio_bell no
window_alert_on_bell no
allow_remote_control yes

# macOS
macos_option_as_alt yes
macos_traditional_fullscreen no

shell_integration yes
