##################################################
# BEGIN_KITTY_FONTS
# == , =>
# font_family      family='FiraCode Nerd Font'
# font_family      family='JetBrainsMono Nerd Font Mono'
# font_family      family='JetBrains Mono'
# font_family      family='Iosevka Nerd Font Mono'
font_family      family='CaskaydiaCove Nerd Font'
# font_features     none
bold_font         auto
italic_font       auto
bold_italic_font  auto
font_size         16.0
# END_KITTY_FONTS

modify_font cell_height 22px
modify_font cell_width 100%
modify_font underline_position 3
modify_font underline_thickness 150%
# modify_font baseline 0
# modify_font strikethrough_position 2px

########################################################
#                                                      #
#   ██████╗██╗   ██╗██████╗ ███████╗ ██████╗ ██████╗   #
#  ██╔════╝██║   ██║██╔══██╗██╔════╝██╔═══██╗██╔══██╗  #
#  ██║     ██║   ██║██████╔╝███████╗██║   ██║██████╔╝  #
#  ██║     ██║   ██║██╔══██╗╚════██║██║   ██║██╔══██╗  #
#  ╚██████╗╚██████╔╝██║  ██║███████║╚██████╔╝██║  ██║  #
#   ╚═════╝ ╚═════╝ ╚═╝  ╚═╝╚══════╝ ╚═════╝ ╚═╝  ╚═╝  #
#                                                      #
########################################################
enable_cursor_trail yes
cursor_trail 3
# cursor_blink_interval -1  # Set to zero to disable blinking. Negative values mean use system default
# cursor_stop_blinking_after 0 # Set to zero to never stop blinking.

#######################################
#                                     #
#  ████████╗ █████╗ ██████╗ ███████╗  #
#  ╚══██╔══╝██╔══██╗██╔══██╗██╔════╝  #
#     ██║   ███████║██████╔╝███████╗  #
#     ██║   ██╔══██║██╔══██╗╚════██║  #
#     ██║   ██║  ██║██████╔╝███████║  #
#     ╚═╝   ╚═╝  ╚═╝╚═════╝ ╚══════╝  #
#                                     #
#######################################
hide_window_decorations titlebar-only
tab_bar_edge top
tab_bar_style hidden
tab_bar_align center
tab_title_template none

# fade \ slant \ separator \ powerline \ hidden
# angled, slanted, round
# tab_bar_min_tabs 1
# tab_title_max_length 20
# tab_powerline_style round
# tab_bar_style powerline
# tab_powerline_style angled
# tab_bar_align left
# tab_title_template "{index}:{tab.active_wd.split('/')[-2]}/{tab.active_wd.split('/')[-1]}"

################################################################
